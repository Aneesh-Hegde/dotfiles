# safer rm
alias rm='rm -i'

# navigation
alias ..='cd ..'
alias ...='cd ../..'

# Color output of ls
alias ls='ls --color=auto'

# quick edit
alias zshrc="nvim ~/.zshrc"
alias bashrc="nvim ~/.bashrc"
alias aliases="nvim ~/.shell_aliases"

#reload alias
alias reload-aliases='source ~/.shell_aliases'

# tmux aliases
alias tmux-ls='~/.config/tmux/tmux-fzf'
alias tmux-code='~/.config/tmux/tmux-fzf code'
alias tmux-flex='~/.config/tmux/tmux-fzf flex'

eval $(thefuck --alias)
